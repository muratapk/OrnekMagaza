@model List<OrnekMagaza.Models.Products>
@{
    ViewData["Title"] = "AddToList";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<h1>Sepetim</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ürün Resim</th>
            <th>Ürün Adı</th>
            <th>Ürün Fiyatı</th>
            <th>Kategorisi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="@item.ProductImage" height="100px" width="100px"/></td>
                <td>@item.ProductName</td>
                <td>@item.UnitPrice</td>
                <td>@item.CategoryID</td>
                <td><a href="#" data-id="@item.ProductID" class="btn btn-danger silme">Sepet Sil</a></td>
            </tr>
        }
    </tbody>
