@model OrnekMagaza.Models.Products
@{
    ViewData["Title"] = "Urundetay";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<nav class="navbar navbar-light bg-white shadow-sm mb-4">
    <div class="container">
        <a class="navbar-brand fw-bold text-primary" href="#">B-STORE</a>
        <a href="index.html" class="btn btn-outline-secondary btn-sm"><i class="bi bi-arrow-left"></i> Alışverişe Dön</a>
    </div>
</nav>

<div class="container my-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Ana Sayfa</a></li>
            <li class="breadcrumb-item"><a href="#">Elektronik</a></li>
            <li class="breadcrumb-item active" aria-current="page">Kablosuz Kulaklık</li>
        </ol>
    </nav>

    <div class="row g-5">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm p-3 bg-white">
                <img src="@Model.ProductImage" id="mainImage" class="product-img-main mb-3" alt="Ürün">
                <div class="d-flex gap-2 justify-content-center">
                    <img src="https://images.unsplash.com/photo-1505740420928-5e560c06d30e?auto=format&fit=crop&w=150&q=80" class="thumbnail-img border" onclick="changeImage(this.src)">
                    <img src="https://images.unsplash.com/photo-1484704849700-f032a568e944?auto=format&fit=crop&w=150&q=80" class="thumbnail-img border" onclick="changeImage(this.src)">
                    <img src="https://images.unsplash.com/photo-1524678606370-a47ad25cb82a?auto=format&fit=crop&w=150&q=80" class="thumbnail-img border" onclick="changeImage(this.src)">
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="ps-lg-4">
                <span class="badge bg-primary mb-2">Ücretsiz Kargo</span>
                <h1 class="fw-bold mb-3">@Model.ProductName</h1>

                <div class="d-flex align-items-center mb-3">
                    <div class="text-warning me-2">
                        <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-half"></i>
                    </div>
                    <span class="text-muted small">(4.8 / 5 - 120 Değerlendirme)</span>
                </div>

                <h2 class="text-primary fw-bold mb-4">@Model.UnitPrice TL</h2>

                <p class="text-muted mb-4">
                    Dünyanın en gelişmiş gürültü engelleme teknolojisine sahip bu kulaklık, 40 saate kadar pil ömrü ve kristal netliğinde ses kalitesi sunar. Hem ofis hem de seyahatleriniz için idealdir.
                </p>

                <div class="mb-4">
                    <label class="fw-bold mb-2 d-block">Renk Seçenekleri:</label>
                    <div class="btn-group" role="group">
                        <input type="radio" class="btn-check" name="color" id="black" checked>
                        <label class="btn btn-outline-dark" for="black">Siyah</label>
                        <input type="radio" class="btn-check" name="color" id="silver">
                        <label class="btn btn-outline-dark" for="silver">Gümüş</label>
                    </div>
                </div>

                <div class="d-flex align-items-center gap-3 mb-5">
                    <div class="input-group quantity-input">
                        <button class="btn btn-outline-secondary" type="button">-</button>
                        <input type="text" class="form-control" value="1">
                        <button class="btn btn-outline-secondary" type="button">+</button>
                    </div>
                    <button class="btn btn-primary btn-lg flex-grow-1">
                        <i class="bi bi-cart-plus me-2"></i>Sepete Ekle
                    </button>
                    <button class="btn btn-outline-danger btn-lg">
                        <i class="bi bi-heart"></i>
                    </button>
                </div>

                <div class="card bg-white border-0 shadow-sm">
                    <div class="card-body p-3">
                        <div class="d-flex mb-3">
                            <i class="bi bi-truck fs-4 text-primary me-3"></i>
                            <div>
                                <h6 class="mb-0 fw-bold">Hızlı Teslimat</h6>
                                <small class="text-muted">Yarın kapınızda (İstanbul içi)</small>
                            </div>
                        </div>
                        <div class="d-flex">
                            <i class="bi bi-shield-check fs-4 text-success me-3"></i>
                            <div>
                                <h6 class="mb-0 fw-bold">2 Yıl Garanti</h6>
                                <small class="text-muted">Resmi distribütör garantili</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <button class="nav-link active fw-bold" data-bs-toggle="tab" data-bs-target="#desc">Ürün Açıklaması</button>
                </li>
                <li class="nav-item">
                    <button class="nav-link fw-bold" data-bs-toggle="tab" data-bs-target="#specs">Teknik Özellikler</button>
                </li>
            </ul>
            <div class="tab-content bg-white p-4 shadow-sm" id="myTabContent">
                <div class="tab-pane fade show active" id="desc">
                    <p>Bu ürün en yüksek kalite standartlarında üretilmiştir...</p>
                </div>
                <div class="tab-pane fade" id="specs">
                    <table class="table table-striped">
                        <tr><td>Bağlantı Tipi</td><td>Bluetooth 5.2</td></tr>
                        <tr><td>Kullanım Süresi</td><td>40 Saat</td></tr>
                        <tr><td>Şarj Süresi</td><td>2 Saat</td></tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function changeImage(src) {
        document.getElementById('mainImage').src = src;
    }
</script>
