<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>B-STORE | Alışverişin Adresi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        .product-card {
            transition: 0.3s;
            border: none;
        }

            .product-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            }

        .carousel-item img {
            height: 450px;
            object-fit: cover;
        }

        .nav-tabs .nav-link {
            color: #333;
            font-weight: 600;
        }

            .nav-tabs .nav-link.active {
                border-bottom: 3px solid #0d6efd;
                color: #0d6efd;
            }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
        <div class="container">
            <a class="navbar-brand fw-bold text-primary" href="#">B-STORE</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="#">Yeni Gelenler</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Kategoriler</a></li>
                </ul>
                <!--Partial View Gelecek-->
                <partial name="_LoginPartialView" />
            </div>
        </div>
    </nav>

    <div id="mainSlider" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://images.unsplash.com/photo-1441986300917-64674bd600d8?auto=format&fit=crop&w=1200&q=80" class="d-block w-100" alt="Kampanya 1">
                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded">
                    <h2>Büyük Yaz İndirimi</h2>
                    <p>Seçili ürünlerde %50 indirim fırsatını kaçırmayın.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://images.unsplash.com/photo-1441984969733-523c1e3b0ff9?auto=format&fit=crop&w=1200&q=80" class="d-block w-100" alt="Kampanya 2">
                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded">
                    <h2>Teknoloji Haftası</h2>
                    <p>En yeni gadgetlar en iyi fiyatlarla burada.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#mainSlider" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#mainSlider" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

    <section class="container my-5">
        <ul class="nav nav-tabs justify-content-center mb-4" id="productTabs" role="tablist">
            <li class="nav-item">
                <button class="nav-link active" id="trend-tab" data-bs-toggle="tab" data-bs-target="#trend" type="button">Trend Ürünler</button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="best-tab" data-bs-toggle="tab" data-bs-target="#best" type="button">En Çok Satanlar</button>
            </li>
        </ul>
         @RenderBody()
        
    </section>

    <div class="modal fade" id="loginModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content p-4">
                <h3 class="fw-bold mb-3">Giriş Yap</h3>
                <form>
                    <div class="mb-3">
                        <label class="form-label">E-posta</label>
                        <input type="email" class="form-control" placeholder="isim@mail.com">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Şifre</label>
                        <input type="password" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Oturum Aç</button>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="registerModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content p-4">
                <h3 class="fw-bold mb-3">Hesap Oluştur</h3>
                <form>
                    <div class="mb-3">
                        <label class="form-label">Ad Soyad</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">E-posta</label>
                        <input type="email" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Şifre</label>
                        <input type="password" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-success w-100">Üye Ol</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(document).ready(function(){
         /////////////////////////////////////////////   
            $(".carttoadd").click(function(e){
               
                e.preventDefault();
                var productId = $(this).data("id");
                $.ajax({
                    url: '/Home/AddToCart',
                    method: 'POST',
                    data: { id: productId },
                    success: function(response) {
                        alert("Ürün sepete eklendi!");
                    },
                    error: function() {
                        alert("Sepete eklenirken bir hata oluştu.");
                    }
                });
            });
            /////////////////
            $(".silme").click(function(e){
               
               e.preventDefault();
               var productId = $(this).data("id");
               $.ajax({
                   url: '/Home/RemoveFromCart',
                   method: 'POST',
                   data: { id: productId },
                   success: function(response) {
                       alert("Ürün sepetten kaldırıldı!");
                       window.location.reload(); // Sayfayı yenileyerek güncel sepeti göster
                   },
                   error: function() {
                       alert("Sepetten kaldırılırken bir hata oluştu.");
                   }
               });
          });
         /////////////////////////////////
       });
    </script>
</body>
</html>