@model OrnekMagaza.ViewModel.RegisterViewModel

<html>

	
	<head>
		 <title> Admin Panel	</title>
		<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
         <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
         <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
		 <link href="~/css/Register.css" rel="stylesheet"/>
	</head>
	<body>

		<div class="container">
	<div class="row">
		<form class="form-signin mg-btm" asp-action="Register">
			<h3 class="heading-desc">
				<button type="button" class="close pull-right" aria-hidden="true">×</button>
				Login to Bootsnipp
			</h3>
			<div class="social-box">
				<div class="row mg-btm">
					<div class="col-md-12">
						<a href="#" class="btn btn-primary btn-block">
							<i class="icon-facebook"></i>    Login with Facebook
						</a>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12">
						<a href="#" class="btn btn-info btn-block">
							<i class="icon-twitter"></i>    Login with Twitter
						</a>
					</div>
				</div>
			</div>
			<div class="main">
                    <input type="text" class="form-control" asp-for="AdSoyad" placeholder="Adınız Soyadınız" autofocus>
					<span asp-validation-for="AdSoyad" class="text-danger"></span>
					<input type="text" class="form-control" asp-for="UserName" placeholder="Kullanıcı Adını Giriniz" autofocus>
					<span asp-validation-for="UserName" class="text-danger"></span> 
					<input type="text" class="form-control" asp-for="Email" placeholder="Email" autofocus>
					<span asp-validation-for="Email" class="text-danger"></span> 
					<input type="password" class="form-control" asp-for="Password" placeholder="Şifreniz">
					<span asp-validation-for="Password" class="text-danger"></span> 
					<input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Şifre Tekrar" >
					<span asp-validation-for="ConfirmPassword" class="text-danger"></span> 

				Are you a business? <a href=""> Get started here</a>
				<span class="clearfix"></span>
			</div>
			<div class="login-footer">
				<div class="row">
					<div class="col-xs-6 col-md-6">
						<div class="left-section">
							<a href="">Forgot your password?</a>
							<a href="">Sign up now</a>
						</div>
					</div>
					<div class="col-xs-6 col-md-6 pull-right">
						<button type="submit" class="btn btn-large btn-danger pull-right">Login</button>
					</div>
				</div>

			</div>
		</form>
	</div>
</div>

	</body>
</html>

